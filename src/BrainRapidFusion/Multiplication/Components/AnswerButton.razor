@inherits AnswerButtonBase

<div class="answer-wrapper" style="@ButtonPosition">
    <div class="@ButtonCssClass"
         @onclick="OnClicked">
        <span>@Answer</span>
    </div>

    @if(!IsMuted && IsClicked && Answer.IsCorrect)
    {
        <audio src="sounds/bip.mp3" autoplay></audio>
    }

    @if(!IsMuted && IsClicked && !Answer.IsCorrect)
    {
        <audio src="sounds/blip.mp3" autoplay></audio>
    }
</div>
